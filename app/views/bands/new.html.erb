<h1>MyBand</h1>
<h1 align=center>Create your band</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@band, url: bands_path) do |f| %>
      <%# render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %> <br/>

      <%= f.submit "Create my band", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
