<% provide(:title, "Edit band") %>
<h1>Update your band information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@band) do |f| %>
      <%# render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label "Looking for other members?" %>
      <%= f.check_box :open, {checked: true, checked_value: "yes", unchecked_value: "No"}  %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

 </div>
</div>
